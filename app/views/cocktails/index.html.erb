<div class="container">
  <h2>All our Cocktails (<%= Cocktail.all.count%>)</h2>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <% if cocktail.photo.attached? %>
          <div class="card-img" style="background-image: url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')"></div>
        <% else %>
          <div class="card-img"></div>
        <% end %>

        <div class="card-info">
          <div class="info-title"><h4><%= cocktail.name %></h4></div>
        </div>
        <div class="card-actions">
          <%= link_to 'More info', cocktail_path(cocktail) %>
          <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
          <%= link_to 'Remove', cocktail_path(cocktail),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
